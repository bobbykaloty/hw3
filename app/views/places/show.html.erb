<!-- Place details page -->

<h1><%= @place["name"] %></h1>

<div>
  <% for entry in @entries %>
    <div style="margin-bottom: 50px;"> 
      <h3 style="margin: 0;"> <%= entry["title"] %> </h3>
      <p style="margin: 5px 0;"> <%= entry["posted_on"] %> </p>
      <p style="margin: 5px 0;"> <%= entry["description"] %> </p>
     </div>
  <% end %>
</div>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p><a href="/places">Back to All Places</a></p>